<!-- res/drawable/border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" /> <!-- Background color inside the border -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border color and width -->
    <corners android:radius="8dp"/> <!-- Rounded corners (optional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
