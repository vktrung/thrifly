<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer cho shadow -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0" /> <!-- Màu xám cho bóng -->
            <corners android:radius="8dp" />   <!-- Bo góc bóng -->
        </shape>
    </item>

    <!-- Layer chính cho nền và viền -->
    <item>
        <shape android:shape="rectangle">
            <!-- Màu nền xám nhạt -->
            <solid android:color="#F3F4F0" />

            <!-- Bo góc -->
            <corners android:radius="8dp" />

            <!-- Viền nhẹ -->
            <stroke
                android:width="1dp"
                android:color="#d3d3d3" />
        </shape>
    </item>

</layer-list>
